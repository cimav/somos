%h3= t :pages
#pages-list
  %ul.page-list
    %li.page-title{:id => "li_page_posts"}
      = link_to @group, :method => :get, :remote => true, :class => 'get-group', :'data-type' => 'html', :id => "group_link_#{@group.id}", :short_name => "#{@group.short_name}", :group_id => "#{@group.id}" do
        = t :home_link
    - @group.pages.order('position').each do |page|
      %li.page-title{:id => "li_page_#{page.id}"}
        = link_to url_for(:controller => "pages", :action => "show_group_page", :group_id => @group.id, :id => page.id), :method => :get, :remote => true, :class => 'get-page', :'data-type' => 'html', :id => "page_link_#{page.id}", :group_name => "#{@group.short_name}", :short_name => "#{page.short_name}", :page_id => "#{page.id}" do
          = page.title
    - membership = @user.memberships.where(:group_id => @group.id).first
    - if !membership.blank?
      %li.page-title{:id => "li_add_page"}
        = link_to url_for(:controller => "pages", :action => "add_page", :group_id => @group.id), :method => :post, :remote => true, :id => 'add-page', :'data-type' => 'html', :id => "add_page", :group_name => "#{@group.short_name}" do
          = t :add_page
