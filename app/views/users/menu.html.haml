#user-info
  #user-display= image_tag current_user.image_url(:small).to_s, :width => 32, :height => 32, :class => "profile-picture-small"
  #user-name
    = current_user.display_name
    = image_tag "down-arrow.png", :id => "user-arrow"
#user-nav
  %ul.user-menu
    %li= link_to (t :home_link), "/"
    - current_user.applications.order(:name).each do |app|
      - if app.app_type == Application::APP_EXTERNAL
        - if app.url.to_s.index("?") 
          - sep = "&";
        - else
          - sep = "?";
        - url = "#{app.url}#{sep}username=#{current_user.username}&token=#{current_user.token}&app=#{app.short_name}"
        %li{:class => 'get-external-app', :app_url => url}= app.name
      - else
        %li= app.name 


    %li= link_to (t :logout), "/logout"

