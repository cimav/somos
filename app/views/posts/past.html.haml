- first = 0
- if @posts.count > 0  
  - div_id = "posts_#{Time.now.to_i}"
  %div{:id => div_id}
    - @posts.each do |post|
      = render :partial => 'post', :locals => {:post => post }
      - first = post.id if first > post.id || first == 0

:javascript
  if (firstBlockPostId > #{first}) {
    firstBlockPostId = #{first};
  }
