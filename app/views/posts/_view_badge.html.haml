.post-badge
  .badge-display
    = image_tag post.user_badge.badge.image_url(:small).to_s, :width => 48, :height => 48, :class => "badge-small"
  .badge-message
    .new-badge #{(t :i_have_earned_new_badge)}:
    .new-badge-message
      %strong #{post.user_badge.badge.message}
  .clearfix
.clearfix
